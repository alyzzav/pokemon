<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.villahermosa.com.droid3.PokiDes">

            <ImageView
                android:id="@+id/img_poki"
                android:layout_width="129dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/pokeball"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="128dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <EditText
                android:id="@+id/tv_poke_name"
                android:enabled="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="216dp"
                android:layout_height="46dp"
                android:ems="10"
                android:textColor="@android:color/black"
                android:inputType="textPersonName"
                android:text="Bulbasaur"
                android:layout_marginRight="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/img_poki"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />



            <TextView
                android:id="@+id/textView2"
                android:layout_width="140dp"
                android:layout_height="19dp"
                android:text="TYPE:"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_poke_name"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="307dp" />



            <TextView
                android:id="@+id/textView3"
                android:layout_width="142dp"
                android:layout_height="18dp"
                android:text="WEIGHT:"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="142dp"
                android:layout_height="18dp"
                android:text="HEIGHT:"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASE EXPERIENCE:"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="202dp"
                android:layout_height="22dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="air and water"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_poke_name"
                app:layout_constraintLeft_toRightOf="@+id/textView2"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="307dp" />


    <TextView
                android:id="@+id/tv_base_experience"
                android:layout_width="203dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="64"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_height"
                app:layout_constraintHorizontal_bias="0.506" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="203dp"
                android:layout_height="20dp"
                android:text="30"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_weight"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="203dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="20"
                app:layout_constraintLeft_toRightOf="@+id/textView3"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_type"
                app:layout_constraintHorizontal_bias="0.506" />

</android.support.constraint.ConstraintLayout>



